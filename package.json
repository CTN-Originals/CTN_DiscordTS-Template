{
	"name": "ctn_discordts-template",
	"author": "CTNOriginals",
	"version": "1.0.0",
	"description": "A Template for a discord bot using discordjs in typescript.",
	"license": "BSD-4-Clause",
	"main": "dist/index.js",
	"homepage": "https://github.com/CTN-Originals/CTN_DiscordTS-Template",
	"scripts": {
		"build": "tsc",
		"fullbuild": "rimraf ./dist && tsc",
		"build:start": "npm run build && npm run start",
		
		"dev:deploy": "npm run build && node .\\dist\\index.js --deploy --guild=DEV_GUILD_ID deployAll=true",
		"deploy": "npm run build && node .\\dist\\index.js --deploy --deployAllGlobal=true",
		
		"dev:deploy:start": "npm run build && node .\\dist\\index.js --deploy --guild=DEV_GUILD_ID deployAll=true && npm start",

		"start": "node dist/index.js",
		"start:dev": "nodemon src/index.ts",
		"start:tsx": "tsx watch src/index.ts",

		"test": "tsx watch tests/index.ts --test"
	},
	"dependencies": {
		"better-console-utilities": "^1.1.0",
		"discord.js": "^14.14.1",
		"dotenv": "^16.3.1",
		"mongoose": "^8.8.2"
	},
	"devDependencies": {
		"@types/node": "^20.10.6",
		"nodemon": "^3.0.2",
		"rimraf": "^5.0.5",
		"tsx": "^4.7.0",
		"typescipt": "^1.0.0"
	}
}
